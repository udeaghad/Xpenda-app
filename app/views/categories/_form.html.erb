<%= form_for @category do |f|%>
<div class="form-card">
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div><br>

  <div>
    <%= f.label :icon %>
    <%= f.text_field :icon %>
  </div><br>

  <div>
    <%= f.submit %>
  </div>

  <button>
    <%= link_to 'Cancel', categories_path %>
  </button>

<% end %>